<style type="text/css">
	.peliculas{
		float: left;
	}
</style>

<div class="container">
	<div class="row">
	  <div class="col-sm-6">
	    <%= form_tag(select_movies_path, :method => "get", id: "search-form") do %>
	        <%= text_field_tag :search, params[:search], placeholder: "Buscar por actor" %>
	        	<%= submit_tag "Buscar" %>
	    <% end %>
	    <br/>
	    <%= form_tag(select_movies_path, :method => "get", id: "search-year-form") do %>
    		<%= text_field_tag :search_year, params[:search_year], placeholder: "Buscar por año"  %>
    			<%= submit_tag "Buscar" %>
	    <% end %>
	    </div>
	    <div class="col-sm-6">
		<%= form_tag(select_movies_path, :method => "get", id: "search-genre-form") do %>
			<%= select_tag :search_genre, ("<option>Selecciona por género</option><br><option>Drama</option><option>Fantasia</option><option>Animación</option><option>Acción</option><option>Terror</option><option>Musical</option><option>Aventura</option><option>Ciencia ficción</option><option>Suspense</option><option>Bélico</option><option>Western</option>").html_safe, class: 'btn btn-default', :onchange => "this.form.submit()"%>
			<% end %>
		</div>
		<br/>

	    <br/>
	</div>
</div>
<br/>
<br>
<div class="container">
	<div class="row">
	    <% @peliculas.each do |peli| %>
		    <div class="col-sm-6 col-md-4 col-lg-4 peliculas">
		        <div class="select-movie">
		            <a href="#"><img src="<%=peli.url%>"></a>
		            <p><%=peli.name%></p>
		            <p><%= peli.precio %></p>
		            <button>Comprar</button>
		        </div>
		    </div>
		    <br/>
	    <% end %>
	</div>
</div>

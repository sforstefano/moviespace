<div class="container">
	<div class="hidden-xs">
		<div class="crear">
			<%= form_for @pelicula do |futbol| %>
						<p>Tiutulo</p>
						<p><%= futbol.text_field :name  %></p>
						<br/>
						<p>Puntuación:</p>
						<p><%= futbol.text_field :stars %></p>
						<br/>
						<p>Actor principal</p>
						<p><%= futbol.text_field :main_actor %></p>
						<br/>
						<p>Año</p>
						<p><%= futbol.text_field :year %></p>
						<br/>
						<p>Poster</p>
						<p><%= futbol.text_field :url %></p>
			<%= futbol.submit "Guardar" %>
			<% end %>
		</div>
	</div>
</div>

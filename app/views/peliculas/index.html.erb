<div class="container">
	<div class="row">
			<div class="col-lg-12 col-xs-12">
				<div class="lista">
					<h3 class="todo">Nuestras peliculas</h3>
					<br/>
					<% @peliculas.limit(10).each do |pelis| %>
						<div class="peliculas">
							<h5 class="titulo"><%= link_to pelis.name, pelis %></h5>
						</div>
					<% end %>
				</div>
			</div>
	</div>
	<br/>
	<br/>
	<div class="row">
		<div class="col-lg-4 col-md-4 col-xs-12">
				<div class="year">
					<h4 class="number">Lo mejor de 2017</h4>
					<% @peliculas.each do |peli| %>
						<% if peli.year === 2017 && peli.stars === 5 %>
							<div class="peliculas">
								<h5 class="titulo"><%= link_to peli.name, peli %></h5>
							</div>
						<% end %>
					<% end %>
				</div>
		</div>

		<div class="col-lg-6 col-md-6 col-xs-12">
				<div class="top-time">
					<h4 class="top-time-title">Top Movies of All Times</h4>
					<% @peliculas.each do |peli2| %>
						<% if peli2.stars === 5 %>
					<div class="peliculas">
						<h5 class="titulo"><%= link_to peli2.name, peli2 %></h5>
					</div>
					<% end %>
					<% end %>
				</div>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-4 col-md-4 col-xs-12">
			<div class="year">
				<h4 class="number">Lo mejor de 2016</h4>
					<% @peliculas.each do |peli3| %>
						<% if peli3.year === 2016 && peli3.stars === 5 %>
							<div class="peliculas">
								<h5 class="titulo"><%= link_to peli3.name, peli3 %></h5>
							</div>
						<% end %>
					<% end %>
				</h4>
			</div>
		</div>
	</div>
</div>
<%= f.select :month, 1..12 %>
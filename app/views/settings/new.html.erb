<div class="container"> 
    <% if flash.present? %>
        <div class="row">
            <div class="col-sm-12 col-md-6 colmd-offset-3" style="padding:25px 0">
            <%= render partial: "shared/flash_messages", flash: flash %>
        </div>
    <% end %> 
</div>        
<div class="container">	
    <div class="col-lg-6 col-md-6">
        <div class="editar">
            <%= form_for(@setting) do |f| %>
                <p>País</p>
                <p><%= f.text_field :country, placeholder: "País", class:"form-control" %></p>
                <br/>
                <p><%= f.text_field :language, placeholder: "Idioma", class:"form-control" %></p>
                <br/>
                <p><%= f.submit "Guardar" %></p>
        	<% end %>
        </div>
    </div>
</div>
